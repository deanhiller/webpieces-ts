{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/.eslintrc.json",
            "!{projectRoot}/eslint.config.js"
        ],
        "sharedGlobals": []
    },
    "targetDefaults": {
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": [
                "architecture:validate-complete",
                "validate-no-file-import-cycles",
                "^build"
            ],
            "inputs": ["default", "^default"]
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "test": {
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
            "cache": true
        },
        "lint": {
            "inputs": [
                "default",
                "{workspaceRoot}/eslint.config.mjs",
                "{workspaceRoot}/architecture/dependencies.json",
                "{workspaceRoot}/packages/tooling/dev-config/eslint-plugin/**/*"
            ],
            "cache": true,
            "options": {
                "quiet": true
            }
        },
        "@angular/build:application": {
            "dependsOn": ["architecture:validate-complete", "validate-no-file-import-cycles"]
        },
        "validate-code": {
            "options": {
                "mode": "STRICT",
                "newMethodsMaxLines": 30,
                "modifiedMethodsMaxLines": 80,
                "modifiedFilesMaxLines": 900,
                "requireReturnTypeMode": "MODIFIED_NEW"
            }
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        },
        {
            "plugin": "./packages/tooling/dev-config/plugin.ts",
            "options": {}
        },
        {
            "plugin": "@webpieces/dev-config",
            "options": {}
        }
    ]
}
