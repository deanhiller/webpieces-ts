{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/.eslintrc.json",
            "!{projectRoot}/eslint.config.js"
        ],
        "sharedGlobals": []
    },
    "targetDefaults": {
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": [
                "architecture:validate-complete",
                "validate-no-file-import-cycles",
                "^build"
            ],
            "inputs": ["default", "^default"]
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "cache": true
        },
        "test": {
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
            "cache": true
        },
        "lint": {
            "inputs": [
                "default",
                "{workspaceRoot}/eslint.config.mjs",
                "{workspaceRoot}/architecture/dependencies.json",
                "{workspaceRoot}/packages/tooling/dev-config/eslint-plugin/**/*"
            ],
            "cache": true,
            "options": {
                "quiet": true
            }
        },
        "@angular/build:application": {
            "dependsOn": ["architecture:validate-complete", "validate-no-file-import-cycles"]
        },
        "validate-code": {
            "options": {
                "methodMaxLimit": {
                    "limit": 80,
                    "mode": "NEW_AND_MODIFIED_METHODS",
                    "disableAllowed": false,
                    "ignoreModifiedUntilEpoch": 1771931925
                },
                "fileMaxLimit": {
                    "limit": 902,
                    "mode": "MODIFIED_FILES",
                    "disableAllowed": false,
                    "ignoreModifiedUntilEpoch": 1771931925
                },
                "requireReturnType": {
                    "mode": "NEW_AND_MODIFIED_METHODS",
                    "disableAllowed": false,
                    "ignoreModifiedUntilEpoch": 1771931925
                },
                "noInlineTypeLiterals": {
                    "mode": "NEW_AND_MODIFIED_METHODS",
                    "disableAllowed": false,
                    "ignoreModifiedUntilEpoch": 1771931925
                },
                "noAnyUnknown": {
                    "mode": "MODIFIED_CODE",
                    "disableAllowed": true,
                    "ignoreModifiedUntilEpoch": 1771931925
                },
                "validateDtos": {
                    "mode": "MODIFIED_CLASS",
                    "disableAllowed": false
                },
                "prismaConverter": {
                    "mode": "NEW_AND_MODIFIED_METHODS",
                    "disableAllowed": false
                },
                "noDestructure": {
                    "mode": "MODIFIED_CODE",
                    "disableAllowed": false,
                    "ignoreModifiedUntilEpoch": 1771931925
                }
            }
        }
    },
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        },
        {
            "plugin": "./packages/tooling/dev-config/plugin.ts",
            "options": {}
        },
        {
            "plugin": "@webpieces/dev-config",
            "options": {}
        }
    ]
}
