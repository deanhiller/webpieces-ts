{
    "name": "dev-config",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/tooling/dev-config",
    "projectType": "library",
    "targets": {
        "validate-eslint-sync": {
            "executor": "@webpieces/dev-config:validate-eslint-sync",
            "cache": true,
            "inputs": [
                "{workspaceRoot}/packages/tooling/dev-config/templates/eslint.webpieces.config.mjs",
                "{workspaceRoot}/eslint.webpieces.config.mjs"
            ]
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/tooling/dev-config",
                "main": "packages/tooling/dev-config/src/index.ts",
                "tsConfig": "packages/tooling/dev-config/tsconfig.lib.json",
                "assets": [
                    "packages/tooling/dev-config/package.json",
                    "packages/tooling/dev-config/README.md",
                    "packages/tooling/dev-config/executors.json",
                    "packages/tooling/dev-config/generators.json",
                    "packages/tooling/dev-config/config/jest/preset.js",
                    {
                        "input": "packages/tooling/dev-config/bin",
                        "glob": "**/*",
                        "output": "bin"
                    },
                    {
                        "input": "packages/tooling/dev-config/config/eslint",
                        "glob": "**/*",
                        "output": "config/eslint"
                    },
                    {
                        "input": "packages/tooling/dev-config/config/typescript",
                        "glob": "**/*",
                        "output": "config/typescript"
                    },
                    {
                        "input": "packages/tooling/dev-config/eslint-plugin",
                        "glob": "**/*",
                        "output": "eslint-plugin"
                    },
                    {
                        "input": "packages/tooling/dev-config/patterns",
                        "glob": "**/*",
                        "output": "patterns"
                    },
                    {
                        "input": "packages/tooling/dev-config/plugin",
                        "glob": "**/*",
                        "output": "plugin"
                    },
                    {
                        "input": "packages/tooling/dev-config/templates",
                        "glob": "**/*",
                        "output": "templates"
                    },
                    {
                        "input": "packages/tooling/dev-config/src/generators",
                        "glob": "**/schema.json",
                        "output": "src/generators"
                    },
                    {
                        "input": "packages/tooling/dev-config/architecture",
                        "glob": "**/*",
                        "output": "architecture"
                    }
                ]
            }
        }
    },
    "tags": ["type:tooling"]
}
